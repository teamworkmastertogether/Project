    @Styles.Render("~/comment/css")

    <div class="main">
        <div class="background">
            <img src="@Url.Content(@ViewBag.Photo)" />
        </div>
    </div>
    <!-- Thanh công cụ -->
    <div class="row ToolFb">
        <div class="ToolLeft pull-left">
            <h2>@ViewBag.name</h2>
        </div>
        <div class="ToolRight pull-right">
            <ul>
                <li id="gioithieu" data-toggle="modal" data-target="#modalGioiThieu"><a href="#">Giới thiệu</a></li>
                <li id="noiquy" data-toggle="modal" data-target="#modalNoiQuy"><a href="#">Nội quy</a></li>
            </ul>
        </div>
        <!--Modal Giới thiệu-->
        <div id="modalGioiThieu" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form>
                        <div class="modal-header">
                            <h4 class="modal-title">Giới thiệu nhóm @ViewBag.name</h4>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p class="text-warning">
                                <img style="height:100%;width:100%" src="~/Assets/Images/Subject/gioithieu.png" />
                            </p>
                        </div>
                        <div class="modal-footer">
                            <input type="button" class="btn btn-primary" data-dismiss="modal" value="Đóng">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--Modal Giới thiệu-->
        <div id="modalNoiQuy" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form>
                        <div class="modal-header">
